<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient">

            <TextView
                android:paddingTop="50dp"
                android:paddingBottom="80dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car Parking Navigator &amp; \n Booking System"
                android:gravity="center_horizontal"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/find_park_lay"
            android:layout_marginTop="140dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/find_park_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:elevation="20dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/find_park_img"
                        android:layout_width="220dp"
                        android:layout_height="150dp"
                        android:src="@drawable/find_parking"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find Parking"
                        android:gravity="center_horizontal"
                        android:textSize="26sp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/find_park_lay"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/recharg_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:elevation="20dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/recharge_img"
                        android:layout_width="220dp"
                        android:layout_height="150dp"
                        android:src="@drawable/parking_recharg"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recharge"
                        android:gravity="center_horizontal"
                        android:textSize="26sp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>